<header class="header">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                   <!-- <img data-src="/assets/img/logo_round.svg" class="svg-inject event-logo" alt="Event Logo"> -->
                   <img src="assets/img/logo-wceu17.png" class="event-logo" alt="WordCamp Europe Logo">
                </div>
                <div class="col-md-9">
                    {% if cfp_open %}
                        <h1 class="headline headline-alpha">Call For Speakers Now Open!</h1>
                        <h3 class="headline headline-alpha">Applications accepted until {{ site.enddate }}</h3>
                    {% else %}
                        <h1 class="headline headline-alpha">
                            {% if site.show_submission_count %}
                                Call for Speakers ended with {{ number_of_talks }} Submissions!
                            {% else %}
                                Call for Speakers has ended!
                            {% endif %}
                        </h1>
                        <h3 class="headline headline-alpha">Applications were accepted until {{ site.enddate }}</h3>
                    {% endif %}
                    <p>
                        {% if cfp_open %}<a class="btn-opencfp btn-opencfp-medium btn-opencfp--outlined" href="{{ url('user_new') }}">Register Now</a>{% endif %}
                        <!--<a class="btn-opencfp btn-opencfp-medium btn-opencfp--primary" href="{{ url('dashboard') }}">View Submissions</a>-->
                    </p>
                </div>
            </div>
        </div>
    </div>
</header>
<section class="section section--light">
    <div class="container">
        <div class="row">
            {% if site.event_location is defined and site.date_format is defined %}
            <div class="col-md-8"><h3 class="headline headline--alpha">
                <!--{{ site.title }} is  on {{ site.arrival|date(site.date_format, false) }} to {{ site.departure|date(site.date_format, false) }} in {{ site.event_location }} -->
            	WordCamp Europe 2017 {{ site.event_location}}, France - June 15-17, 2017
			</h3></div>
            {%  else %}
                <div class="col-md-8"><h3 class="headline headline--alpha">For More Information About The WordCamp Europe 2017</h3></div>
            {% endif %}
            <div class="col-md-4 text-right"><a href="{{ site.eventurl }}" class="btn-opencfp btn-opencfp-medium btn-opencfp--light">Visit WCEU Website</a></div>
        </div>
    </div>
</section>
