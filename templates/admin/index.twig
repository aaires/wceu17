{% extends "layouts/admin.twig" %}
{% block content %}
    <h2 class="headline">Admin Dashboard</h2>
    <div class="row">
        <div class="col-md-3">
            <div class="tile tile-talks">
                <div class="tile-content">
                    <h2>{{ talkTotal }}</h2>
                    <p>Total Talks</p>
                </div>
                <i class="fa fa-bullhorn"></i>
            </div>
        </div>
        <div class="col-md-3">
            <div class="tile tile-speakers">
                <div class="tile-content">
                    <h2>{{ speakerTotal }}</h2>
                    <p>Total Speakers</p>
                </div>
                <i class="fa fa-users"></i>
            </div>
        </div>
        <div class="col-md-3">
            <div class="tile tile-favorites">
                <div class="tile-content">
                    <h2>{{ favoriteTotal }}</h2>
                    <p>Total Favorites</p>
                </div>
                <i class="fa fa-star"></i>
            </div>
        </div>
        <div class="col-md-3">
            <div class="tile tile-selected">
                <div class="tile-content">
                    <h2>{{ selectTotal }}</h2>
                    <p>Total Selected</p>
                </div>
                <i class="fa fa-check-square-o"></i>
            </div>
        </div>
    </div>

    <h2>Recent Talks</h2>
    <div class="table-responsive">
    {% include "admin/talks/_table.twig" %}
    </div>
{% endblock %}
{% block scripts %}
    {{ parent() }}
    <script src="/assets/js/admin/querystring.js"></script>
    <script src="/assets/js/admin/talk.js"></script>
{% endblock %}
